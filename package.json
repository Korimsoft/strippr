{
  "name": "strippr",
  "version": "1.0.0",
  "description": "Comic strip generator - transform a simple JSON config and several source images into a comic strip",
  "main": "./dist/main.js",
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "start": "node .",
    "copy-resources": "copyfiles ./resources/fonts/**/*.{fnt,png} ./dist",
    "copy-config": "copyfiles ./resources/config/global-config.json ./dist",
    "compile": "tsc --project ./",
    "build": "npm-run-all compile test copy-resources copy-config",
    "dev:start": "npm-run-all test",
    "dev": "nodemon --watch ./src -e ts --exec npm run dev:start"
  },
  "bin": {
    "strippr": "./dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Korimsoft/strippr.git"
  },
  "keywords": [
    "korimsoft",
    "strippr",
    "comics",
    "comicstrip",
    "generator"
  ],
  "author": "Korimsoft",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/Korimsoft/strippr/issues"
  },
  "homepage": "https://github.com/Korimsoft/strippr#readme",
  "dependencies": {
    "jimp": "^0.16.1",
    "yargs": "^17.0.1"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/jimp": "^0.2.28",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/yargs": "^17.0.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "gulp-chmod": "^3.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
